// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Reserva {
  id           Bytes     @id @db.Binary(16)
  tempoEstadia Int
  dataReserva  DateTime
  checkin      DateTime?
  checkout     DateTime?
  Usuario      Usuario   @relation(fields: [usuarioId], references: [cpf])
  Quarto       Quarto    @relation(fields: [quartoId], references: [numeroDoQuarto])
  usuarioId    String     @unique @db.VarChar(11)
  quartoId     Int     @unique

  @@map("reservas")
}

model Quarto {
  id              Bytes    @id @db.Binary(16)
  disponibilidade Boolean? @default(true)
  numeroDoQuarto  Int      @unique
  reserva         Reserva?

  @@map("quartos")
}

model Usuario {
  id      Bytes    @id @db.Binary(16)
  nome    String   @db.VarChar(147)
  cpf     String   @unique @db.VarChar(11)
  reserva Reserva?

  @@map("usuarios")
}
